{{#section 'css'}}
<link rel="stylesheet" href="/css/style.css">
<link rel="icon" href="images/logo-web.png">
<title>Tìm Kiếm - GameX</title>
{{/section}}


<header>
    <!-- Menu Top + Slide Main -->
    {{> nav  fixed-top=false}}
</header>

<main class="container mt-3">
    <!-- Title Danh Muc -->
    <div class="h3 p-1 pl-3 mt-3 d-block rounded"
        style="border-left: 5px solid red; background: #E9ECEF;font-weight: bold;">#{{dataTag.Name}}</div>

    <!-- Danh Sach Bài Viết + Tin Nổi Bật -->
    <div class="row">
        <!-- Danh Sach Bài Viết -->
        <div class="col-sm-9 col-md-9">
            <!-- List Bai Viêt -->
            {{> list-posts dataPost=dataPost}}
            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-center">
                    {{#if Paging.prePage}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/tag/{{TagID}}?page={{Paging.prePage}}">Previous</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                    {{/if}}

                    {{#each Paging.Pages}}
                    <li class="page-item {{#ifEquals ../Paging.PageCurrent this}}active{{/ifEquals}}">
                    <a class="page-link" href="/tag/{{../TagID}}?page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}

                    {{#if Paging.nextPage}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/tag/{{TagID}}?page={{Paging.nextPage}}">Next</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Next</a>
                    </li>
                    {{/if}}

                </ul>
            </nav>
        </div>

        <!--Tin Nổi Bật -->
        {{> hot-posts}}
    </div>
</main>

<footer class="" style="background: #222222">
    <!-- Quote -->
    {{> quote}}
</footer>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Tìm Kiếm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" method="post">
                    <input type="text" id="inputPassword5" class="form-control" placeholder="Nội Dung">
                    <div class="text-right mt-3">
                        <a href="tim-kiem.html" class="btn btn-primary">Tìm Kiếm</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>