<!-- Content -->
<div id="content" class="pl-md-3 pt-3 pb-md-3" style="background:#F1F1F1; overflow-y: scroll;">
    <h3 class="pl-3 pl-md-0">Sửa Thông Tin Người Dùng</h3>
    <hr>
    <div class="p-3">
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Tài Khoản</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="staticEmail" placeholder="Tài Khoản" value="vtanh1905">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="" placeholder="Email" value="vtanh1905@gmail">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Họ Tên</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="" placeholder="Tên" value="Vũ Tuấn Anh">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Mật Khẩu</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="" placeholder="Mật Khẩu" value="YeuEm3Ngan">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Ngày Sinh</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtDOB" placeholder="Mật Khẩu">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label d-flex align-items-center">Ảnh Đại
                    Hiện</label>
                <div class="col-sm-10">
                    <span onclick="performClick('theFile');" style="cursor: pointer;">
                        <img id="avatar"
                            src="https://www.garena.vn/img/game-carousel-bns@2x.88f97343.jpg?fbclid=IwAR3fPuSGoqO9mHxTpFxIvZR683Ttosr54Ocr-xa33g9eo8teBJn2LzNmfuI"
                            class="rounded d-block" alt="..." width="100px" height="100px">
                    </span>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Vai Trò</label>
                <div class="col-sm-3">
                    <select class="form-control" id="sltVaiTro">
                        <option value="doc-gia">Độc Giả</option>
                        <option value="phong-vien">Phóng Viên</option>
                        <option value="bien-phong-vien">Biên Tập Viên</option>
                        <option value="quan-tri-vien">Quản Trị Viên</option>
                    </select>
                </div>
            </div>
            <div id="boxNgayHetHan" class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Ngày Hết Hạn</label>
                <div class="col-sm-3">
                    <input type="date" class="form-control" id="" value="1990-04-30">
                </div>
            </div>
            <div id="boxChuyenMuc" class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Chuyên Mục</label>
                <div class="col-sm-3">
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>None</option>
                        <option>Game Mobile</option>
                        <option>Game Online</option>
                        <option>Esports</option>
                        <option>PC/Console</option>
                        <option>Công Nghệ</option>
                        <option>Phim Ảnh </option>
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="reset" class="btn btn-secondary mr-3">Hủy</button>
                <button type="submit" class="btn btn-primary">Sửa</button>
            </div>
        </form>
    </div>
</div>

<!-- input File -->
<input type="file" id="theFile" class="d-none">