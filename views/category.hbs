{{#section 'css'}}
<title>Danh mục</title>
<link rel="stylesheet" href="/css/style.css">
{{/section}}

<header>
    <!-- Menu Top + Slide Main -->
    {{> nav  fixed-top=false}}
</header>

<main class="container mt-3">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb px-3 py-1" style="border-left: 4px solid red;">
            <li class="breadcrumb-item small"><a href="index.html"><i class="fas fa-home"></i> Trang Chủ</a>
            </li>
            <li class="breadcrumb-item small"><a href="danh-muc.html">Game Online</a></li>
            <li class="breadcrumb-item small active" aria-current="page">Trong Nước</li>
        </ol>
    </nav>

    <!-- Danh Sach Bài Viết + Tin Nổi Bật -->
    <div class="row">
        <!-- Danh Sach Bài Viết -->
        <div class="col-sm-9 col-md-9">
            <!-- List Bai Viêt -->
            {{> list-posts}}
            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!--Tin Nổi Bật -->
        {{> hot-posts}}
    </div>

</main>

<footer class="" style="background: #222222">
    <!-- Quote -->
    {{> quote}}
</footer>

