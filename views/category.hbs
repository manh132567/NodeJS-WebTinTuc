{{#section 'css'}}
<title>Danh mục</title>
<link rel="stylesheet" href="/css/style.css">
{{/section}}

<header>
    <!-- Menu Top + Slide Main -->
    {{> nav  fixed-top=false}}
</header>

<main class="container mt-3">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb px-3 py-1" style="border-left: 4px solid red;">
            <li class="breadcrumb-item small"><a href="/"><i class="fas fa-home"></i> Trang Chủ</a></li>
            {{#if breadcrumb.CatParentID}}
            <li class="breadcrumb-item small active"><a
                    href="/category/{{breadcrumb.CatParentID}}">{{breadcrumb.CatParentName}}</a></li>
            <li class="breadcrumb-item small " aria-current="page">{{breadcrumb.Name}}</li>
            {{else}}
            <li class="breadcrumb-item small active" aria-current="page">{{breadcrumb.Name}}</li>
            {{/if}}
        </ol>
    </nav>

    <!-- Danh Sach Bài Viết + Tin Nổi Bật -->
    <div class="row">
        <!-- Danh Sach Bài Viết -->
        <div class="col-sm-9 col-md-9">
            <!-- List Bai Viêt -->
            {{> list-posts dataPost=dataPost}}

            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-center">
                    {{#if Paging.prePage}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/category/{{breadcrumb.CatID}}?page={{Paging.prePage}}">Previous</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                    {{/if}}

                    {{#each Paging.Pages}}
                    <li class="page-item {{#ifEquals ../Paging.PageCurrent this}}active{{/ifEquals}}">
                    <a class="page-link" href="/category/{{../breadcrumb.CatID}}?page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}

                    {{#if Paging.nextPage}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/category/{{breadcrumb.CatID}}?page={{Paging.nextPage}}">Next</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Next</a>
                    </li>
                    {{/if}}

                </ul>
            </nav>
        </div>

        <!--Tin Nổi Bật -->
        {{> hot-posts}}
    </div>

</main>

<footer class="" style="background: #222222">
    <!-- Quote -->
    {{> quote}}
</footer>